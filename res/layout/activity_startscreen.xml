<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/schiffeversenken"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ma.schiffeversenken.android.view.StartScreen" >

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true" >
            
	    <Button
	        android:id="@+id/Start_Spiel_Button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:clickable="true"
	        android:text="@string/button_text_start_game" />
	
	    <Button
	        android:id="@+id/Einstellungen_Button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/Start_Spiel_Button"
	        android:clickable="true"
	        android:text="@string/button_text_settings" />
	
	    <Button
	        android:id="@+id/Hilfe_Button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/Einstellungen_Button"
	        android:clickable="true"
	        android:text="@string/button_text_help" />

    </RelativeLayout>
    
</RelativeLayout>
